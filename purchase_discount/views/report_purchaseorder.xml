<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="report_purchaseorder_document"
        inherit_id="purchase.report_purchaseorder_document"
    >  
       
        
        <xpath expr="//table[1]/thead/tr//th[last()]" position="before">
            <th class="text-right">
                <strong>Disc. (%)</strong>
            </th>
        </xpath>
        <xpath expr="//td[span[@t-field='line.price_subtotal']]" position="before">
            <td class="text-right">
                <span t-field="line.discount" />
            </td>
        </xpath>
        
        
        <xpath expr="//table[1]/thead/tr//th[2]" position="before">
            <th class="text-center">
                <strong>UOM</strong>
            </th>
        </xpath>
       <xpath expr="//td[span[@t-field='line.name']]" position="after">
            <td class="text-center">
                <span t-field="line.product_uom.name" />
            </td>
        </xpath>
        
        <xpath expr="//table[1]/thead/tr//th[2]" position="before">
            <th class="text-center">
                <strong>Barcode</strong>
            </th>
        </xpath>
       <xpath expr="//td[span[@t-field='line.product_uom.name']]" position="before">
            <td class="text-center">
              
                <span t-field="line.product_id.barcode"/>
               
            </td>
        </xpath>
      
        <xpath expr="//table[1]/thead/tr//th[8]" position="after">
            <th class="text-center">
                <strong>Unit Price with VAT after Disc </strong>
            </th>
        </xpath>
       <xpath expr="//td[span[@t-field='line.discount']]" position="after">
            <td class="text-center">
                <span    t-field="line.x_unit_price_withtax"    />
            </td>
        </xpath>
         
        <xpath expr="//table[1]/thead/tr//th[10]" position="replace">
            <th class="text-center">
                <strong>Amount without VAT </strong>
            </th>
        </xpath>
        
         <xpath expr="//table[1]/thead/tr//th[10]" position="before">
            <th class="text-center">
                <strong>VAT Amount </strong>
            </th>
        </xpath>
       <xpath expr="//td[span[@t-field='line.price_subtotal']]" position="before">
            <td class="text-center">
                <span    t-field="line.price_tax"    />
            </td>
        </xpath>
        
        <xpath position="attributes" expr="/t[1]/t[1]/t[4]/t[1]/div[1]/span[1]">

          <attribute name="t-field">o.picking_type_id.default_location_dest_id</attribute>

       </xpath>
        
         <xpath expr="//td[span[@t-field='line.name']]" position="replace">
            <td class="text-center">
                   <span t-field="line.product_id"/>                
            </td>
        </xpath>
        

<xpath position="attributes" expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[2]/tr[1]/t[1]/td[2]/span[1]">
   <attribute name="t-options-widget">"barcode"</attribute>
</xpath>
<xpath position="attributes" expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[2]/tr[1]/t[1]/td[2]/span[1]">
   <attribute name="t-options-width">150</attribute>
</xpath>
<xpath position="attributes" expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[2]/tr[1]/t[1]/td[2]/span[1]">
  <attribute name="t-options-height">30</attribute>
</xpath>

<xpath position="attributes" expr="/t[1]/t[1]/div[1]/table[1]/tbody[1]/t[2]/tr[1]/t[1]/td[2]/span[1]">
  <attribute name="t-options-humanreadable">15</attribute>
</xpath>
        
        
        
    </template>
</odoo>
